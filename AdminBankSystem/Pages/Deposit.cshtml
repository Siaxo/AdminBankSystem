@page
@model AdminBankSystem.Pages.DepositModel
@{
}

<main id="main" class="main">


    <form class="row g-3" method="post">
        <div class="col-12">
            <label asp-for="Amount" class="form-label">Amount to deposit</label>
            <input class="form-control" id="inputNanme4" asp-for="Amount">
            <span class="field-validation-error" asp-validation-for="Amount"></span>
        </div>
        <div class="col-12">
            <label asp-for="DateWhen" class="form-label">Date for Deposit</label>
            <input class="form-control" id="inputEmail4" asp-for="DateWhen">
            <span class="field-validation-error" asp-validation-for="DateWhen"></span>
        </div>
        <div class="col-12">
            <label asp-for="Comment" class="form-label">Comment</label>
            <input class="form-control" id="inputPassword4" asp-for="Comment">
            <span class="field-validation-error" asp-validation-for="Comment"></span>
       </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Deposit</button>
        </div>
    </form>

</main>